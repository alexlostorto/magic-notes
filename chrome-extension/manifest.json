{
    "manifest_version": 3,
    "name": "Sparx Extension",
    "version": "2.0.6",
    "description": "Stores bookwork codes and has colour themes",

    "host_permissions": [
      "*://www.sparxmaths.uk/*",
      "https://auth.sparxmaths.uk/*"
    ],
  
    "icons": {
      "128": "logo.png"
    },

    "action": {
      "default_icon": {
        "128": "logo.png"
      },
      "default_title": "Sparx Extension",
      "default_popup": "popup.html"
    },
    
    "permissions": [
      "activeTab",
      "storage",
      "downloads"
    ],

    "content_scripts": [
      {
        "matches": ["*://www.sparxmaths.uk/*", "https://auth.sparxmaths.uk/*"],
        "js": ["contentScript.js"]
      }
    ],

    "web_accessible_resources": [{
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }]
  
  }
  